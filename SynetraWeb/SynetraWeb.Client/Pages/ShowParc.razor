@page "/parc/{parcId:int}"
@using SynetraWeb.Client.Models
@using SynetraWeb.Client.Services
@rendermode InteractiveAuto

@inject NavigationManager NavigationManager

<h3>Show Parc</h3>

@if (parc != null)
{
    <div>
        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@parc.Id</dd>

            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@parc.Name</dd>

            <dt class="col-sm-2">IsActive</dt>
            <dd class="col-sm-10">@parc.IsActive</dd>

            <dt class="col-sm-2">IsEnable</dt>
            <dd class="col-sm-10">@parc.IsEnable</dd>

            <dt class="col-sm-2">Created Date</dt>
            <dd class="col-sm-10">@parc.CreatedDate?.ToString("MM/dd/yyyy HH:mm:ss")</dd>

            <dt class="col-sm-2">Updated Date</dt>
            <dd class="col-sm-10">@parc.UpdatedDate?.ToString("MM/dd/yyyy HH:mm:ss") ?? "N/A"</dd>
        </dl>
    </div>
}
else
{
    <p>Loading...</p>
}

@code {
    [Parameter]
    public int parcId { get; set; }

    private Parc parc;
    private ParcService ParcService = new ParcService();

    protected override async Task OnInitializedAsync()
    {
        parc = await ParcService.GetByIdAsync(parcId);
    }
}
